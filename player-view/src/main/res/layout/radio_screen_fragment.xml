<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/radio_screen_abl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/title_radio"
            app:titleTextColor="?android:attr/textColorPrimary" />

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/radio_screen_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/radio_screen_b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radio_screen_abl"
        app:srcCompat="@drawable/img_eztanda"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/radio_screen_b"
        android:layout_width="@dimen/radio_button_size"
        android:layout_height="@dimen/radio_button_size"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radio_screen_iv"
        app:srcCompat="@drawable/ic_play"
        tools:ignore="ContentDescription" />

    <ProgressBar
        android:id="@+id/radio_screen_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/radio_screen_b"
        app:layout_constraintEnd_toEndOf="@+id/radio_screen_b"
        app:layout_constraintStart_toStartOf="@+id/radio_screen_b"
        app:layout_constraintTop_toTopOf="@+id/radio_screen_b"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>